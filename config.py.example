#!/usr/bin/python

class PyPasteConfig:
    """Configuration class for PyPaste"""

    # Configure all necessasry parameters
    def __init__(self):
        self.__port = 5000                        #Port
        self.__host = "127.0.0.1"                 #Host
        self.__baseURL = "http://{HOST}:{PORT}/"  #URL for paste links. {HOST} and {PORT} will be replaced
        self.__debug = False                      #Enable debug mode. Do *not* enable it in production environments
        self.__maxPasteSize = 1024*1024           #Maximum paste size in bytes (1024 * 1024 = 1MB)

    # Getters
    def getPort(self):
        return self.__port

    def getHost(self):
        return self.__host

    def getBaseURL(self):
        return self.__baseURL

    def getDebug(self):
        return self.__debug

    def getMaxPasteSize(self):
        return self.__debug